<p id="notice"><%= notice %></p>

<h1>Listing Family Members</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Email</th>
      <th>Image</th>
      <th>Occupation</th>
      <th>Description</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @family_members.each do |family_member| %>
      <tr>
        <td><%= family_member.first_name %></td>
        <td><%= family_member.middle_name %></td>
        <td><%= family_member.last_name %></td>
        <td><%= family_member.dob %></td>
        <td><%= family_member.email %></td>
        <td><%= family_member.image %></td>
        <td><%= family_member.occupation %></td>
        <td><%= family_member.description %></td>
        <td><%= family_member.phone_number %></td>
        <td><%= link_to 'Show', family_member %></td>
        <td><%= link_to 'Edit', edit_family_member_path(family_member) %></td>
        <td><%= link_to 'Destroy', family_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

